# Maintainer: Peter Budai <peterbudai@hotmail.com>

_realname=Test-YAML
pkgname=perl-${_realname}
pkgver=1.07
pkgrel=1
pkgdesc="Testing Module for YAML Implementations"
arch=('any')
url="http://search.cpan.org/dist/Test-YAML/"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-Test-Base')
options=('!emptydirs')
groups=('perl-modules')
source=("http://www.cpan.org/authors/id/T/TI/TINITA/${_realname}-${pkgver}.tar.gz")
sha256sums=('1f300d034f46298cb92960912cc04bac33fb27f05b8852d8f051e110b9cd995f')

build() {
  cd ${_realname}-${pkgver}
  perl Makefile.PL installdirs=vendor
  make
}

check() {
  cd ${_realname}-${pkgver}
  make test
}

package() {
  cd ${_realname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
