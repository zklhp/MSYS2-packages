# Maintainer: Peter Budai <peterbudai@hotmail.com>

_realname=Test-Deep
pkgname=perl-${_realname}
pkgver=1.128
pkgrel=1
pkgdesc="Extremely flexible deep comparison"
arch=('any')
url="http://search.cpan.org/dist/Test-Deep"
license=('GPL' 'PerlArtistic')
depends=('perl' 'perl-Test-Simple' 'perl-Test-NoWarnings')
options=('!emptydirs')
groups=('perl-modules')
source=("http://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/${_realname}-${pkgver}.tar.gz")
sha256sums=('852d7e836fba8269b0b755082051a24a1a309d015a8b76838790af9e3760092f')

build() {
  cd ${_realname}-${pkgver}
  perl Makefile.PL installdirs=vendor
  make
}

check() {
  cd ${_realname}-${pkgver}
  make test
}

package() {
  cd ${_realname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
